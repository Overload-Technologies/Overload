#shader vertex
#version 430 core

#include ":Shaders/Common/Buffers/EngineUBO.ovfxh"

layout (location = 0) in vec3 geo_Pos;

uniform mat4 u_LightSpaceMatrix;

void main()
{
    vec4 fragPos = ubo_Model * vec4(geo_Pos, 1.0);
    gl_Position = u_LightSpaceMatrix * fragPos;
}

#shader fragment
#version 430 core

out vec4 FRAGMENT_COLOR;

void main()
{
    gl_FragDepth = gl_FragCoord.z;
    FRAGMENT_COLOR = vec4(gl_FragCoord.z, gl_FragCoord.z, gl_FragCoord.z, 1.0);
}
